{{ header }}
<div id="account-transaction" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
      {% if is_logged %}
	  {% set class = 'col-sm-9' %}
      {% else %}
	  {% set class = 'col-sm-12' %}
      {% endif %}
      <div id="_content" class="{{ class }}">
	  <h1>{{ heading_title_payments }}</h1>
	  {% if order_id %}
	      {% if payment %}
		  {{payment}}
	      {% else %}
		  <div class="alert alert-warning">{{text_paid}}</div>
	      {% endif %}
	 {% else %}
	     <div class="alert alert-danger">{{text_error}}</div>
	  {% endif %}
	  {% if is_logged %}
	      {{customer_history}}
	  {% endif %}
      </div>
      {% if is_logged %}
	  {{ column_right }}
      {% endif %}
  </div>
</div>
{{ footer }}
