{{ header }}{{ column_left }}
<div id="content">
    {% if error_warning %}
        <div class="warning">error_warning</div>
    {% endif %}

    <div class="container-fluid">

        <div class="page-header">
            <div class="container-fluid">
                <div class="pull-right">
                    <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                    <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
                <h1>{{ heading_title }}</h1>
                <ul class="breadcrumb">
                    {% for breadcrumb in breadcrumbs %}
                        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
        <div class="content">
            {% if error_warning %}
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            <div class="panel panel-default" width="360%">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> Edit Tpay.com</h3>
                </div>
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment">
                    <div style="margin: 17px 18px 27px 47px; font-size: 15px; " class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-10"><select class="form-control" name="payment_tpay_status" id="input-status">
                                    <option value="1"{%  if "1" == payment_tpay_status %} selected="selected" {% endif %}>{{ text_enabled }}</option>
                                    <option value="0"{%  if "0" == payment_tpay_status %} selected="selected" {% endif %}>{{ text_disabled }}</option>
                                </select></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_tpay_sort_order" value="{{ payment_tpay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label"> {{ entry_tpay_seller_id }}</label>
                            <div class="col-sm-10"><input class="form-control" type="text" size="16" maxlength="16"
                                                          name="payment_tpay_seller_id" value="{{ payment_tpay_seller_id }}"/>
                                {% if error_merchant %}
                                    <span class="error">{{ error_merchant }}</span>
                                {% endif %}</div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="required" data-toggle="tooltip"
                                                                        title="Kod bezpieczeństwa znajduje się w Panelu Odbiorcy Płatności "></span>
                                {{ entry_tpay_conf_code }}</label>
                            <div class="col-sm-10"><input class="form-control" size="32" maxlength="32"
                                                          name="payment_tpay_conf_code" value="{{ payment_tpay_conf_code }}"/></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label"><strong>{{ entry_settings_orders }}</strong></label>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_tpay_new_order }}</label>
                            <div class="col-sm-10"><select class="form-control"
                                                           name="payment_tpay_order_status_new">
                                    {% for order_status in order_statuses %}
                                    <option value="{{order_status.order_status_id}}" {% if order_status.order_status_id == payment_tpay_order_status_new %} selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}</select></div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_tpay_order_status_error }}</label>
                            <div class="col-sm-10"><select class="form-control"
                                                           name="payment_tpay_order_status_error">                                    {% for order_status in order_statuses %}
                                        <option value="{{order_status.order_status_id}}" {% if order_status.order_status_id == payment_tpay_order_status_error %} selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}</select></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_tpay_order_status_completed }}</label>
                            <div class="col-sm-10"><select class="form-control"
                                                           name="payment_tpay_order_status_completed">{% for order_status in order_statuses %}
                                        <option value="{{order_status.order_status_id}}" {% if order_status.order_status_id == payment_tpay_order_status_completed %} selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}</select></div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_tpay_currency }} </label>
                            <div class="col-sm-10">
                                <select name="payment_tpay_currency" class="form-control" id="tpay_currency">
                                    {% for name in curr %}
                                        <option value="{{ name }}" {%  if name == payment_tpay_currency %} selected="selected" {% endif %}>{{ name }}</option>
                                    {% endfor %}
                                </select></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </form>
</div>
</div>


{{ footer }}
