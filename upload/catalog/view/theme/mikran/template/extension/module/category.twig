<div class="list-group">
    {% for category in categories %}
	{% if category.category_id == category_id %} 
	    <a href="{{ category.href }}#{{category.category_id}}" id="{{category.category_id}}" class="list-group-item active">
		<span>{{ category.name }}</span>
		<span class="fa fa-check pull-right"></span>
	    </a> 
	    {% if category.children %}
		{% for child in category.children %}
		    {% if child.category_id == child_id %}
			<a href="{{ child.href }}#{{child.category_id}}" id="{{child.category_id}}" class="list-group-item active">
			    <span class="category_level_1">{{ child.name }}</span>
			    <span class="fa fa-check pull-right"></span>
			</a>
			{% if child.children_lv3 %}
			    {% for child_lv3 in child.children_lv3 %}
				{% if child_lv3.category_id == child_lv3_id %}
                        	    <a href="{{ child_lv3.href }}#{{child_lv3.category_id}}" id="{{child_lv3.category_id}}" class="list-group-item active">
					<span class="category_level_2">{{ child_lv3.name }}</span>
					<span class="fa fa-check pull-right"></span>
				    </a>
				    {% if child.children_lv4 %}
					{% for child_lv4 in child.children_lv4 %}
					    {% if child_lv4.category_id == child_lv4_id %}
						<a href="{{ child_lv4.href }}#{{child_lv4.category_id}}" id="{{child_lv4.category_id}}" class="list-group-item active">
						    <span class="category_level_3">{{ child_lv4.name }}</span>
						    <span class="fa fa-check pull-right"></span>
						</a>
					    {% else %}
                       				<a href="{{ child_lv4.href }}#{{child_lv4.category_id}}" id="{{child_lv4.category_id}}" class="list-group-item">
						    <span class="category_level_3">{{ child_lv4.name }}</span>
						    <span class="fa fa-chevron-right fa-xs pull-right"></span>
						</a>
					    {% endif %}
					{% endfor %}
				    {% endif %}
				{% else %}
                       		    <a href="{{ child_lv3.href }}#{{child_lv3.category_id}}" id="{{child_lv3.category_id}}" class="list-group-item">
					<span class="category_level_2">{{ child_lv3.name }}</span>
					<span class="fa fa-chevron-right fa-xs pull-right"></span>
				    </a>
				{% endif %}
  			    {% endfor %}
			{% endif %}
		    {% else %} 
			<a href="{{ child.href }}#{{child.category_id}}" id="{{child.category_id}}" class="list-group-item">
			    <span class="category_level_1">{{ child.name }}</span>
			    <span class="fa fa-chevron-right fa-xs pull-right"></span>
			</a>
		    {% endif %}
		{% endfor %}
	    {% endif %}
	{% else %}
	    <a href="{{ category.href }}#{{category.category_id}}" id="{{category.category_id}}" class="list-group-item">{{ category.name }}
	    </a>
	{% endif %}
    {% endfor %}
</div>
