{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-shipping" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if text_success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ text_success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-shipping" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="shipping_gls_status" id="input-status" class="form-control">
                {% if shipping_gls_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="shipping_gls_sort_order" value="{{ shipping_gls_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
	  </div>
	  <div class="form-group">
              <label class="col-sm-2 control-label" for="input-surcharge">Opłata paliwowa (%)</label>
              <div class="col-sm-10">
		  <input type="text" name="shipping_gls_surcharge" value="{{ shipping_gls_surcharge }}" placeholder="Opłata paliwowa w %" id="input-surcharge" class="form-control" />
              </div>
	  </div>
	  <div class="form-group">
              <label class="col-sm-2 control-label" for="input-surcharge">Viatoll (pln)</label>
              <div class="col-sm-10">
		  <input type="text" name="shipping_gls_viatoll" value="{{ shipping_gls_viatoll }}" placeholder="Opłata viatoll w pln" id="input-viatoll" class="form-control" />
              </div>
	  </div>
	  <fieldset>
	      <legend>{{ text_gls_shipping }}</legend>
	      <table id="country_table" class="table table-striped table-bordered table-hover">
		  <thead>
		      <tr>
			  <td class="text-left">{{ entry_country }}</td>
			  <td class="text-left">{{ entry_price }}</td>
			  <td class="text-left">{{ free_from }}</td>
			  <td class="text-left">Weight Modifier</td>
			  <td class="text-left">{{ entry_tax }}</td>
			  <td></td>
		      </tr>
		  </thead>
		  <tbody>
		      {% set country_row = 0 %}
		      {% for country_rate in country_shipping_rates %}
			  <tr id="country-row{{ country_row }}">
			      <td class="text-left">
				  <select name="country_row[{{ country_row }}]" class="form-control" data-index="{{ country_row }}">  
				      {% for country in countries %}
					  {% if country.country_id == country_rate['country_id'] %}
					      <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>                    
					  {% else %}                    
					      <option value="{{ country.country_id }}">{{ country.name }}</option>					  
					  {% endif %}
				      {% endfor %}				      
				  </select>
			      </td>
			      <td class="text-left">
				  <input name="shippment_gls_rate[{{ country_row }}]" placeholder="Dodaj '-' jeśli ma być dokładnie ta wartość" value="{{country_rate['price']}}" class="form-control">
			      </td>
			      <td class="text-left">
				  <input name="shippment_gls_free_from[{{ country_row }}]" placeholder="{{free_from}}" value="{{country_rate['free_from']}}" class="form-control">
			      </td>
			      <td class="text-left">
				  <input name="shippment_gls_modifier[{{ country_row }}]" placeholder="weight:price : 5:100,10:200,25:350" value="{{country_rate['modifier']}}" class="form-control">
			      </td>
			      <td class="text-left">
				  <select name="shipping_gls_tax_class_id[{{ country_row}}]" id="input-tax-class" class="form-control">
				      <option value="0">{{ text_none }}</option>
				      {% for tax_class in tax_classes %}
					  {% if tax_class.tax_class_id == country_rate['tax_class_id'] %}
					      <option value="{{ tax_class.tax_class_id }}" selected="selected">{{ tax_class.title }}</option>
					  {% else %}
					      <option value="{{ tax_class.tax_class_id }}">{{ tax_class.title }}</option>
					  {% endif %}
				      {% endfor %}
				  </select>
			      </td>
			      <td class="text-left"><button type="button" onclick="$('#country-row{{country_row}}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
			  </tr>
			  {% set country_row = country_row + 1 %}
		      {% endfor %}
                  </tbody>              
		  <tfoot>
                      <tr>
			  <td colspan="3"></td>
			  <td class="text-left"><button type="button" id="button-country-add" data-toggle="tooltip" title="{{ button_country_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                </tr>
		  </tfoot>
              </table>
          </fieldset>
      </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
 var country_row = {{ country_row }};

 $('#button-country-add').on('click', function() {
     

     html  = '<tr id="country-row' + country_row + '">';
     html += '  <td class="text-left"><select name="country_row[' + country_row + ']" class="form-control" data-index="' + country_row + '">';
     {% for country in countries %}
     html += '    <option value="{{ country.country_id }}">{{ country.name|escape('js') }}</option>';
     {% endfor %}   
     html += '</select></td>';
     html += '<td class="text-left"><input name="shippment_gls_rate['+country_row+']" value="0" class="form-control"></td>';
     html += '  <td class="text-left"><select name="shipping_gls_tax_class_id[' + country_row + ']" class="form-control">';
     {% for tax_class in tax_classes %}
     html += '<option value="{{ tax_class.tax_class_id }}">{{ tax_class.title }}</option>';
     {% endfor %}
     html += '</select></td>';

     html += '  <td class="text-left"><button type="button" onclick="$(\'#zone-to-geo-zone-row' + country_row + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
     html += '</tr>';

     $('#country_table tbody').append(html);     
     
     $('country_table[' + country_row + ']').trigger();
     
     country_row++;
 });
</script>	
{{ footer }} 
